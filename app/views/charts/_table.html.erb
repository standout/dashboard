<section class="chart chart--table">

  <canvas id="myChart" width="400" height="400"></canvas>
  <script>
  window.addEventListener('turbolinks:load', function () {
    const json_dataset = <%= dataset.to_json.html_safe %>;
    const dataList = json_dataset['data'].map(array => array[1])
      .sort(function(a, b){return b-a});
    const ctx = document.getElementById("myChart").getContext('2d');
    Chart.defaults.global.defaultFontFamily = "geogrotesque";
    const myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: json_dataset['data'].map(array => array[0]),
            datasets: [{
                label: json_dataset['title'],
                data: dataList,
                backgroundColor: [
                    `rgba(219, 96, 82, ${dataList[0]/dataList[0]})`,
                    `rgba(219, 96, 82, ${dataList[1]/dataList[0]})`,
                    `rgba(219, 96, 82, ${dataList[2]/dataList[0]})`,
                    `rgba(219, 96, 82, ${dataList[3]/dataList[0]})`,
                    `rgba(219, 96, 82, ${dataList[4]/dataList[0]})`,
                    `rgba(219, 96, 82, ${dataList[5]/dataList[0]})`
                ],
                borderColor: [
                    `rgba(219, 96, 82, ${dataList[0]/dataList[0]})`,
                    `rgba(219, 96, 82, ${dataList[1]/dataList[0]})`,
                    `rgba(219, 96, 82, ${dataList[2]/dataList[0]})`,
                    `rgba(219, 96, 82, ${dataList[3]/dataList[0]})`,
                    `rgba(219, 96, 82, ${dataList[4]/dataList[0]})`,
                    `rgba(219, 96, 82, ${dataList[5]/dataList[0]})`
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });
  })
  </script>

  <%= render partial: 'charts/json', locals: { dataset: dataset } %>
</section>
