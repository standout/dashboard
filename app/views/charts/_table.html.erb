<section class="chart chart--table">
  <header class="chart__title chart_title--table">
    <%= dataset[:title] %>
  </header>
  <div class="chart__data chart__data--table">
    <% dataset[:data].each do |data| %>
      <%= data.join(', ') %>
    <% end %>
  </div>

  <canvas id="myChart" width="400" height="400"></canvas>
  <script>
  window.addEventListener('turbolinks:load', function () {
    const json_dataset = <%= dataset.to_json.html_safe %>;
    const ctx = document.getElementById("myChart").getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: json_dataset['data'].map(array => array[0]),
            datasets: [{
                label: json_dataset['title'],
                data: json_dataset['data'].map(array => array[1]),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });
  })
  </script>

  <%= render partial: 'charts/json', locals: { dataset: dataset } %>
</section>
